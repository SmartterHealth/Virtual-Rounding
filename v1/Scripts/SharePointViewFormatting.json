{
  "schema": "https://developer.microsoft.com/json-schemas/sp/view-formatting.schema.json",
  "hideSelection": true,
  "hideListHeader": true,
  "rowFormatter": {
      "elmType": "div",
      "style": {
          "float": "left",
          "display": "flex",
          "flex-wrap": "wrap",
          "flex-direction": "column",
          "align-items": "center",
          "justify-content": "space-around",
          "min-width": "100px",
          "min-height": "110px",
          "border-radius": "8px",
          "margin-right": "10px",
          "margin-bottom": "10px",
          "box-shadow": "2px 2px 4px darkgrey",
          "background-color": "#0078d4"
      },
      "attributes": {
          "class": "ms-bgColor-neutralLighterAlt ms-bgColor-neutralLight--hover ms-fontColor-themePrimary--hover"
      },
      "children": [
          {
              "elmType": "div",
              "children": [
                  {
                      "elmType": "a",
                      "style": {
                          "font-size": "50px",
                          "text-decoration": "none",
                          "color": "white"
                      },
                      "attributes": {
                          "iconName": "Medical",
                          "href": "=[$MeetingLink]",
                          "target": "_blank"
                      }
                  }
              ]
          },
          {
              "elmType": "div",
              "style": {
                  "text-align": "center",
                  "margin-bottom": "0px"
              },
              "children": [
                  {
                      "elmType": "a",
                      "style": {
                          "font-weight": "500",
                          "font-size": "1.1rem",
                          "color": "white",
                          "text-decoration": "none"
                      },
                      "txtContent": "[$Title]",
                      "attributes": {
                          "href": "=[$MeetingLink]",
                          "target": "_blank"
                      }
                  }
              ]
          },
          {
              "elmType": "div",
              "style": {
                  "text-align": "center",
                  "margin-top": "0px"

              },
              "children": [
                  {
                      "elmType": "a",
                      "style": {
                          "font-weight": "250",
                          "font-size": "1.0rem",
                          "color": "white",
                          "text-decoration": "none"
                      },
                      "txtContent": "[$RoomLocation]",
                      "attributes": {
                          "href": "=[$MeetingLink]",
                          "target": "_blank"
                      }
                  }
              ]
          }
      ]
  }
}